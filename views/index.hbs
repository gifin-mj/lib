
<section >

<h1 style="text-align: center;">Books</h1>
<table style="text-align: center;" class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Publisher</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th> 
      <th scope="col">Cover Image</th> 
      <th scope="col">Options</th> 
    </tr>
  </thead>
  <tbody>
   {{#each books as |book|}}
  
   <tr>
      <td>{{#each book}} {{title}} {{/each}}</td>
      <td>{{#each book}} {{author}} {{/each}}</td>
      <td>{{#each book}} {{publisher}} {{/each}}</td>
      <td>{{#each book}} {{category}} {{/each}}</td>
      <td>{{#each book}} {{price}} {{/each}}</td>
      <td><img src="/images/{{#each book}}{{_id}}{{/each}}.jpg" width="50px" height="50px" alt="qwqwe" /></td>
      <td>
              <a href="/editbook/{{#each book}}{{_id}}{{/each}}">Edit</a>
              <a href="/deletebook/{{#each book}}{{_id}}{{/each}}" onClick="return confirm('Deleting {{#each book}}{{title}}{{/each}} Are you sure? ')">Delete</a>
      </td>
   </tr> 
   {{/each}}
   </tbody>
</table>
</section>


